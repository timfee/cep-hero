{
  "ignorePatterns": [
    "components/",
    "scripts/",
    "evals/reports/",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "rules": {
    "sort-keys": "off",
    "eqeqeq": "warn",
    "func-style": ["error", "declaration"],
    "no-debugger": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-multi-comp": "off",
    "max-statements": ["error", 20],
    "typescript/no-import-type-side-effects": "off",
    "import/consistent-type-specifier-style": ["error", "prefer-inline"],
    "import/no-nodejs-modules": [
      "error",
      { "allow": ["node:fs", "node:fs/promises", "node:path", "node:crypto"] }
    ],

    "jest/require-hook": "off",

    "jsdoc/check-property-names": "error",
    "jsdoc/check-tag-names": "error",
    "jsdoc/empty-tags": "error",
    "jsdoc/require-param": "off",
    "jsdoc/require-returns": "off"
  },
  "extends": [
    "./node_modules/ultracite/config/oxlint/core/.oxlintrc.json",
    "./node_modules/ultracite/config/oxlint/react/.oxlintrc.json",
    "./node_modules/ultracite/config/oxlint/next/.oxlintrc.json"
  ],
  "$schema": "./node_modules/oxlint/configuration_schema.json"
}
